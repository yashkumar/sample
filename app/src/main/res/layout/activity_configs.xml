<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="version_info"
                android:text="@string/configs_version_info"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="notification_config"
                android:text="@string/configs_notification"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="blood_pressure_config"
                android:text="@string/configs_blood_pressure"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="drink_water_config"
                android:text="@string/configs_drink_water"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="function_config"
                android:text="@string/configs_function"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="healthy_config"
                android:text="@string/configs_healthy"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sedentary_config"
                android:text="@string/configs_sedentary"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="page_config"
                android:text="@string/configs_page"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="turn_wrist_lighting_config"
                android:text="@string/configs_turn_wrist_lighting"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="warn_heart_rate_config"
                android:text="@string/configs_warn_heart_rate"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="warn_blood_pressure_config"
                android:text="@string/configs_warn_blood_pressure"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="dnd_config"
                android:text="@string/configs_dnd"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
